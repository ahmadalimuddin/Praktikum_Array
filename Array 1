#include <iostream>

using namespace std;

void nomor1()
{
	int arr[5],cari,toggle=0;
	
	for(int i=0; i<5; i++)
	{
		cout<<"Masukan bilangan ke-"<<i+1<<" : ";
		cin>>arr[i];
	}
	cout<<endl;
	
	cout<<"Input bilangan yg ingin di cari: ";
	cin>>cari;
	cout<<endl;

	for(int i=0; i<5; i++)
	{
		if(cari==arr[i])
		{
			cout<<"Ketemu pada index ke-"<<i+1<<endl;
			toggle = 1;
		}
	}
	if(toggle == 0)
	{
		cout<<"Tidak ketemu"<<endl;
	}
}

void nomor2()
{
	char arr[15] = {'A','B','C','D','E','F','G','H','I','J','K','L','M','N','O'};
	
	for(int i = 0; i<15; i++)
	{
		
	}
}

void main()
{
	int pilih;
	menu:;
	cout<<" Menu : "<<endl<<endl;
	cout<<" No.1 "<<endl;
	cout<<" No.2 "<<endl;
	
	cout<<"Pilih menu: ";
	cin>>pilih;
	
	if(pilih == 1)
	{
		nomor1();
		goto menu;
	}
	else if(pilih == 2)
	{
		nomor2();
		goto menu;
	}
}
